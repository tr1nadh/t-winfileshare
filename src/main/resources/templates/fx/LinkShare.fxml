<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.twinfileshare.fx.view.UploadView">
   <children>
      <Button layoutX="100.0" layoutY="25.0" mnemonicParsing="false" onAction="#connectGoogleDrive" prefHeight="39.0" prefWidth="399.0" text="Connect google drive account">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ChoiceBox fx:id="accountChoiceBox" layoutX="101.0" layoutY="72.0" prefHeight="31.0" prefWidth="313.0" value="Select an email" />
      <Button fx:id="accountDisconnectBTN" layoutX="424.0" layoutY="72.0" mnemonicParsing="false" onAction="#disconnectSelectedAccount" prefHeight="31.0" prefWidth="76.0" text="Disconnect" />
      <Button fx:id="addFilesBTN" layoutX="101.0" layoutY="113.0" mnemonicParsing="false" onAction="#addFilesFromFileManager" prefHeight="31.0" prefWidth="89.0" text="Add files" />
      <ListView fx:id="fileListView" layoutX="100.0" layoutY="150.0" prefHeight="166.0" prefWidth="399.0" />
      <Button fx:id="removeFilesBTN" layoutX="200.0" layoutY="113.0" mnemonicParsing="false" onAction="#removeFilesFromFileListView" prefHeight="31.0" prefWidth="69.0" text="Remove" />
      <Button fx:id="uploadBTN" layoutX="100.0" layoutY="336.0" mnemonicParsing="false" onAction="#uploadFiles" prefHeight="39.0" prefWidth="399.0" text="Upload files">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ProgressBar fx:id="fileUploadProgressBar" layoutX="100.0" layoutY="326.0" prefHeight="9.0" prefWidth="399.0" progress="0.0" />
      <Button fx:id="clearFilesBTN" layoutX="282.0" layoutY="113.0" mnemonicParsing="false" onAction="#clearFileListView" prefHeight="31.0" prefWidth="69.0" text="Clear" />
   </children>
</AnchorPane>
