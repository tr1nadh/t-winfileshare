         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="titleText" layoutX="49.0" layoutY="49.0" minHeight="25.0" prefHeight="31.0" prefWidth="515.0" />
      <Label layoutX="12.0" layoutY="49.0" text="Title:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
